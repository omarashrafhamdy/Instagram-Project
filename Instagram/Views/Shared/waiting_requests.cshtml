
<div class="modal fade" id="requestModal2" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Follower Requests</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @foreach (var item in ViewBag.waitingrequest)
                {
                    <a href="#" class="row col-8 my-2 FoundedUsersBySearch userName"></a>
                    <div class="row my-auto col-6">
                        <div class=" col-4 mx-1 profile-image">
                            <img class="rounded-circle" src="~/images/profiles/@item.image" width="40px" height="40px">
                        </div>
                        <p class="d-block my-0 cala" name="user_sender">@item.name<p>
                            @using (Html.BeginForm("ProfilePage", "User", null, FormMethod.Post))
                            {
                                <input type="hidden" name="user_sender" value="@item.id" />
                                <button type="submit" class="btn_back-color btn btn-primary ">Accept</button>
                            }
                    </div>
                }
            </div>

        </div>
    </div>
</div>

