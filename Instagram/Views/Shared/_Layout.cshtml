

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @Styles.Render("~/Content/ashraf")

    <link rel="stylesheet" href="~/Content/ashraf">

    <link href="~/Content/_Layout.css" rel="stylesheet" />
    <title>@ViewData["Title"] - WebAppNew</title>
    <link rel="icon" href="https://upload.wikimedia.org/wikipedia/commons/thumb/e/e7/Instagram_logo_2016.svg/768px-Instagram_logo_2016.svg.png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>

<body>
    @*Start of Nav Section*@
    <nav class="navbar fixed-top navbar-expand-md navbar-light box-shadow bg-white ">
        <div class="container col-8 mx-auto">
            @*Start of Logo Section Left*@
            <a class="navbar-brand logo" href="/User/HomePage">
                <h3>Instagram</h3>
            </a>
            @*End of Logo Section*@
            @*Start of Search Section Mid*@
            <ul class="navbar-nav mx-auto">
                <li class="nav-item">
                    <form class="form-inline mb-0">
                        <div class="input-group">
                            <input type="text" class="form-control px-4" placeholder="Search" id="searchBar">
                            @*updated here*@
                            <button class="btn btn-outline-secondary" type="button" onclick="searchForUser()">Search</button>
                        </div>
                    </form>
                </li>
            </ul>
            @*End of Logo Section*@
            @*Start of Functional Icons Section Left*@
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/User/HomePage">
                        <i class="fa fa-home fa-fw fa-lg icons"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <button class="btn" data-toggle="modal" data-target="#addPostModal"><i class="fa fa-plus fa-lg icons"></i></button>
                    @Html.Partial("~/Views/Shared/parts/_addPostModal.cshtml")

                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/User/ProfilePage">
                        <img class="img-fluid  rounded-circle" src="~/images/profiles/@ViewBag.UserProfilePicture" style="height: 30px; width: 30px; ">
                    </a>
                </li>
            </ul>
            @*End of Functional Icons Section Left*@
        </div>
    </nav>
    @*End of Nav Section*@
    <div class="py-5" style="background-color:#fafafa">
        <div class="container col-8 mx-auto mt-4 py-3">
            <div class="col-lg-12 mx-auto">
                <div role="main" class="row mx-auto">

                    @*Replace whatever you find here with you code guys *@

                    @RenderBody()
                    @* This is the End *@

                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

    <script src="~/Scripts/searchBar.js"></script>
</body>

</html>